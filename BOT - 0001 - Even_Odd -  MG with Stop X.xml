<?xml version="1.0" encoding="UTF-8"?>
<bot>
    <name>RecoveryBot</name>
    <strategy>
        <type>recovery</type>
        <initialStake>10</initialStake> <!-- Define your initial stake here -->
        <recoveryFactor>2</recoveryFactor> <!-- Define how much to increase stake after a loss -->
        <maxRetries>5</maxRetries> <!-- Define the maximum number of retries before stopping -->
        <tradeInterval>60</tradeInterval> <!-- Define the interval in seconds between trades -->
    </strategy>
    <parameters>
        <market>binary</market> <!-- Specify the market you are trading in -->
        <asset>EURUSD</asset> <!-- Define the asset you are trading -->
        <expiryTime>5</expiryTime> <!-- Define expiry time in minutes -->
        <riskManagement>
            <stopLoss>100</stopLoss> <!-- Define stop loss amount -->
            <takeProfit>200</takeProfit> <!-- Define take profit amount -->
        </riskManagement>
    </parameters>
</bot>
